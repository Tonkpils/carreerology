
<h3>Jobs Listing</h3>

<% if @jobs.blank? %>
  <h3><small>No job listings available</small></h3>
<% end %>

<% @jobs.each do |job| %>
  <div class="mdl-card mdl-shadow--2dp mdl-cell--12-col">
    <div class="mdl-card__title mdl-card--expand">
      <h2 class="mdl-card__title-text"><%= job.name %></h2>
    </div>
    <div class="mdl-card__supporting-text">
      <%= job.description %>
    </div>
    <div class="mdl-card__actions mdl-card--border">
      <%= link_to_if !admin_signed_in?, "Apply", new_job_application_form_path(job), class: "mdl-button--colored mdl-button mdl-js-button mdl-js-ripple-effect" do %>
        <%= link_to "Applications", job_application_forms_path(job), class: "mdl-button--colored mdl-button mdl-js-button" %>
        <%= link_to "Edit", edit_job_path(job), class: "mdl-button--colored mdl-button mdl-js-button" %>
        <%= link_to "Delete", job_path(job), method: :delete, data: {confirm: "Are you sure?"}, class: "mdl-button--colored mdl-button mdl-js-button" %>
      <% end %>
    </div>
  </div>
  <div class="job-separator mdl-cell--1-col"></div>
<% end %>

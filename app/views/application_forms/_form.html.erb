<%= form_for [@job, @application_form] do |f| %>
  <% if @application_form.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@application_form.errors.count, "error") %> prohibited this application_form from being saved:
      </h2>

      <ul>
      <% @application_form.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mdl-textfield mdl-js-textfield">
    <%= f.label :name, class: "mdl-textfield__label" %>
    <%= f.text_field :name, class: "mdl-textfield__input" %>
  </div>
  <br>
  <div class="field mdl-textfield mdl-js-textfield">
    <%= f.label :email, class: "mdl-textfield__label" %>
    <%= f.text_field :email, class: "mdl-textfield__input" %>
  </div>
  <br>
  <div class="field mdl-textfield mdl-js-textfield">
    <%= f.label :address, class: "mdl-textfield__label" %>
    <%= f.text_field :address, class: "mdl-textfield__input" %>
  </div>
  <br>
  <div class="field mdl-textfield mdl-js-textfield">
    <%= f.label :phone_number, class: "mdl-textfield__label" %>
    <%= f.text_field :phone_number, class: "mdl-textfield__input" %>
  </div>
  <div class="actions">
    <%= f.submit "Submit",  class: "mdl-button mdl-js-button mdl-button--raised mdl-button--colored" %>
    <%= link_to 'Back', jobs_path, class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect" %>
  </div>
<% end %>
